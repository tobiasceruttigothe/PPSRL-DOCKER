<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Patrón de consola con correlationId -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] [%X{correlationId}] %-5level %logger{36} - %msg%n
            </pattern>
        </encoder>
    </appender>

    <!-- Archivo de logs (opcional, para producción) -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/api-gateway.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/api-gateway.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] [%X{correlationId}] %-5level %logger{36} - %msg%n
            </pattern>
        </encoder>
    </appender>

    <!-- Nivel de log por paquete -->
    <logger name="org.paper" level="DEBUG"/>
    <logger name="org.springframework.cloud.gateway" level="DEBUG"/>
    <logger name="org.springframework.security" level="INFO"/>
    <logger name="reactor.netty" level="INFO"/>

    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <!-- Descomenta para logs en archivo: -->
        <!-- <appender-ref ref="FILE"/> -->
    </root>

</configuration>